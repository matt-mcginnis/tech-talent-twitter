<div class="jumbotron" ,="," width="100%">
    <h1>@<%= @user.username %>'s Profile & Tweets</h1>
</div>
<div class="container">
    <%= render 'tweets/form', tweet: Tweet.new %>

    <p> Name: <%= @user.name %></p>
    <p> Location: <%= @user.location %></p>
    <p> Bio: <%= @user.bio %></p>
    <p> Following: <%= @following.length %></p>
    <p> Followers: <%= @followers.length %></p>

    <p>
        <% if current_user.following.include?(@user.id) %>
            <%= link_to "Following", unfollow_path(id: @user.id), class: "btn btn-primary", id: "unfollow_btn" %>
        <% else %>
            <% if current_user.id != @user.id %>
    	    <%= link_to "Follow", now_following_path(id: @user.id), class: "btn btn-primary" %>
    	<% end %>
        <% end %>
    </p>

    <% @user.tweets.each do |tweet| %>
        <div>
            <p>@<%= @user.username %></p>
    	<p><%= tweet.message.html_safe %></p>
        </div>
    <% end %>
</div>
