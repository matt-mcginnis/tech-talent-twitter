<%= form_with(model: tweet, local: true) do |form| %>
<% if tweet.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(tweet.errors.count, "error") %>
            prohibited this tweet from being saved:</h2>

        <ul>
            <% tweet.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<div class="form-group">
    <div class="col-md-11", style="padding-left: 0; padding-right: 0;">
    <%= form.text_field :message, placeholder: "What's happening?", class: "form-control" %>
    </div>
    <div class="col-md-1" style="padding-left: 0;">
    <%= form.submit "Share It!", class: "btn btn-primary", style: "float: right;" %>
    </div>
    <%= form.file_field :image, style: "padding-top: 10px;" %>
</div>

<div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
</div>
<% end %>
